<!DOCTYPE html>
<meta http-equiv="Content-Security-Policy" content="default-src 'none' connect-src 'self';font-src 'self'; img-src 'self' data: https:; style-src 'self' ; script-src 'self'">
<html lang="en">
  <head>
    <meta http-equiv="Content-Security-Policy" content="default-src 'self'; script-src 'self'">
    <meta http-equiv="X-Content-Security-Policy" content="default-src 'self'; script-src 'self'">
    <meta http-equiv="X-WebKit-CSP" content="default-src 'self'; script-src 'self'">
    <%- include('../partials/head'); %>
  </head>
  
  <body class="container">
    <header>
      <%- include('../partials/header'); %>
    </header>

    <main>
      <div class="jumbotron">
        <h1>Top Mascots</h1>
        <p><%= tagline %></p>
        <ul>
          <% mascots.forEach(function(mascot) { %>
            <li>
              <strong><%= mascot.name %></strong>
              representing <%= mascot.organization %>, born <%= mascot.birth_year %>
            </li>
          <% }); %>
        </ul>
      </div>
    </main>

    <footer>
      <%- include('../partials/footer'); %>
    </footer>
  </body>
</html>
